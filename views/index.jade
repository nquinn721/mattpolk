extends includes/layout

block content
	.col-md-12
		h1 Add item
		form(action="/additem", method="post")
			.form-group
				label(for="title") Add a title
				input.form-control(placeholder="Title", id="title", name="title", value="#{title || ''}")
			.form-group
				label(for="description") Write your desciption (optional)
				input.form-control(placeholder="Description", id="description", name="description", value="#{description || ''}")
			.form-group
				label(for="price") What was the price?
				.input-group
					span.input-group-addon $
					input.form-control(type='text', aria-label='Amount (to the nearest dollar)', placeholder="0", id="price", name="price", value="#{cost || ''}")
					span.input-group-addon .00
			.form-group
				label(for="sold") Did you sell it already?
				.input-group
					span.input-group-addon $
					input.form-control(type='text', aria-label='Amount (to the nearest dollar)', placeholder="0", id="sold", name="sold", value="#{sold || ''}")
					span.input-group-addon .00
			.form-group
				input.btn.btn-info(type="submit")
